<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:id="@+id/iv_start_activity_listview_item"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@mipmap/travel_icon"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_start_activity_listview_item_title"
        android:lineSpacingMultiplier="1.2"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/tab1_recommend_for_you_title"
        android:layout_toRightOf="@+id/iv_start_activity_listview_item"
        />
    <TextView
        android:id="@+id/tv_start_activity_listview_item_money"
        android:layout_below="@+id/tv_start_activity_listview_item_title"
        android:layout_toRightOf="@+id/iv_start_activity_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_start_activity_listview_item"
        android:gravity="bottom"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:text="￥"/>


    <TextView
        android:layout_below="@+id/tv_start_activity_listview_item_title"
        android:layout_toRightOf="@+id/tv_start_activity_listview_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/iv_start_activity_listview_item"
        android:gravity="bottom"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:text="11250"/>

    <TextView
        android:layout_below="@+id/tv_start_activity_listview_item_title"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_start_activity_listview_item"
        android:gravity="bottom"
        android:text="1人已报名"/>

</RelativeLayout>
