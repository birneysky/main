<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <FrameLayout
        android:id="@+id/layout_tab1_2_inner_travel"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="16dp"
        >

        <ImageView
            android:id="@+id/iv_tab1_2_inner_travel"
            android:src="@mipmap/travel_icon"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_tab1_2_inner_travel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟团游"
            android:background="@color/colorTab1RecommendForYouArgument"
            android:textColor="@android:color/white"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            />

    </FrameLayout>



    <TextView
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="16sp"
        android:id="@+id/tv_tab1_2_inner_travle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_tab1_2_inner_travel"
        android:text="@string/tab1_recommend_for_you_title"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_tab1_2_inner_travle_money"
        android:layout_toRightOf="@+id/layout_tab1_2_inner_travel"

        android:layout_alignBottom="@+id/layout_tab1_2_inner_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:gravity="bottom"
        />

    <TextView
        android:id="@+id/tv_tab1_2_inner_travle_prirce"
        android:layout_toRightOf="@+id/tv_tab1_2_inner_travle_money"

        android:layout_alignBottom="@+id/layout_tab1_2_inner_travel"
        android:gravity="bottom"
        android:textSize="18sp"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15263"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/tv_tab1_2_inner_travle_prirce"
        android:layout_alignBottom="@+id/layout_tab1_2_inner_travel"
        android:gravity="bottom"

        android:text="起"/>

    <TextView
        android:id="@+id/tv_inner_travel_item_argument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/tab1_recommend_argument"
        android:text="@string/tab1_recommend_argument"
        android:textColor="@color/colorTab1RecommendForYouArgument"
        android:background="@drawable/bg_tab1_tv_border_argument"
        android:drawablePadding="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_alignBottom="@+id/layout_tab1_2_inner_travel"
        />

</RelativeLayout>
