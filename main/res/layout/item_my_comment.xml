<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.jhhy.cuiweitourism.view.CircleImageView
            android:id="@+id/civ_item_my_comment_user_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/travel_icon"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:layout_alignTop="@+id/civ_item_my_comment_user_portrait"
            android:id="@+id/tv_item_my_comment_user_name"
            android:layout_toRightOf="@+id/civ_item_my_comment_user_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="name"/>
        <TextView
            android:gravity="bottom"
            android:layout_below="@+id/tv_item_my_comment_user_name"
            android:text="2016-08-19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/civ_item_my_comment_user_portrait"
            android:layout_alignBottom="@+id/civ_item_my_comment_user_portrait"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/travel_icon"
            />
        <TextView
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/tab1_recommend_for_you_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@color/colorBgTextViewMyComment"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/colorLineGray2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我："
            android:textColor="@color/colorTextColorMyComment"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/tab1_recommend_for_you_title"
            />
    </LinearLayout>
</LinearLayout>
