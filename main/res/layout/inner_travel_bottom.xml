<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:background="@android:color/white"
        app:tabTextColor="@android:color/black"
        app:tabSelectedTextColor="@color/colorTab1RecommendForYouArgument"
        app:tabIndicatorColor="@color/colorTab1RecommendForYouArgument"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tablayout_inner_travel_tab"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_inner_travel_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </android.support.v4.view.ViewPager>

    <!--<include-->
        <!--layout="@layout/inner_travel_detail_bottom"-->
        <!--/>-->

</LinearLayout>
