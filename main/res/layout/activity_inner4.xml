<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--<include layout="@layout/title_tab1_inner_travel" />-->

    <cn.bleu.widget.slidedetails.SlideDetailsLayout
        android:id="@+id/slidedetails"
        app:default_panel="front"
        app:duration="300"
        app:percent="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--<include layout="@layout/layout_inner_travel_top"-->
            <!--android:id="@+id/slidedetails_front"-->
        <!--/>-->

        <com.markmao.pulltorefresh.widght.XScrollView
            android:id="@+id/slidedetails_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" />

        <include layout="@layout/layout_tab2_bottom"
            android:id="@+id/slidedetails_behind"
            />

    </cn.bleu.widget.slidedetails.SlideDetailsLayout>
</LinearLayout>

