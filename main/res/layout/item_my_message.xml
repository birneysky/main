<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/travel_icon"
            />
        <TextView
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/tab1_recommend_for_you_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@color/colorBgTextViewMyComment"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/colorLineGray2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我："
            android:textColor="@color/colorTextColorMyComment"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/tab1_recommend_for_you_title"
            />
    </LinearLayout>

</LinearLayout>
