<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhhy.cuiweitourism.ui.VisaDataConfirmActivity">


    <include layout="@layout/title_tab1_inner_travel"/>
    <View
        android:id="@+id/line_inner_order"
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/colorLineGray2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white"
        >
        <CheckBox
            android:id="@+id/cb_visa_data_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_visa_data_confirm_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_visa_data_confirm"
            android:text="@string/visa_data_confirm_notice"
            android:lineSpacingMultiplier="1.4"
            android:paddingLeft="10dp"
            />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/sp_visa_data_confirm_selection_area"
            android:layout_below="@+id/tv_visa_data_confirm_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.4"
            android:layout_below="@+id/sp_visa_data_confirm_selection_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/visa_data_confirm_material"
            android:paddingBottom="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您可以选择以下两种方式递交签证材料："
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、快递至翠微旅游门市"
            />
        <TextView
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2、到翠微旅游门市当面递交签证材料"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <Button
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_btn_inner_travel_argument_selector"
            />
    </RelativeLayout>
</LinearLayout>
