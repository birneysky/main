<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:id="@+id/layout_title_inner_travel"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/colorLineGray2"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/title_main_tv_left_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:src="@mipmap/arrow_left_green"
        />


    <TextView
        android:id="@+id/tv_title_inner_travel"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/activity_main_mine"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/title_main_iv_right_telephone"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@mipmap/tab4_edit_info"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="16dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        />



</RelativeLayout>
