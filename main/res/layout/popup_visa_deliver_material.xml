<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent"
    android:gravity="bottom"
    android:id="@+id/layout_main"
    >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择人员类型"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="16dp"
            />

        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:id="@+id/tv_type1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="在职人员"
                android:background="@drawable/bg_et_city_unselected_corner_border"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:id="@+id/tv_type2"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="退休人员"
                android:background="@drawable/bg_et_city_unselected_corner_border"
                />
            <TextView
                android:id="@+id/tv_type3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="自由职业者"
                android:background="@drawable/bg_et_city_unselected_corner_border"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_type4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="学龄前儿童"
                android:background="@drawable/bg_et_city_unselected_corner_border"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:id="@+id/tv_type5"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:background="@drawable/bg_et_city_unselected_corner_border"
                android:text="学生学生"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="自由职业者"
                android:background="@drawable/bg_et_city_unselected_corner_border"
                android:layout_marginLeft="4dp"
                android:visibility="invisible"
                />

        </LinearLayout>

        <TextView
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的常用邮箱"/>

        <EditText
            android:id="@+id/et_mail_address"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textSize="16sp"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"
            android:hint="请输入您的常用邮箱地址"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_et_city_unselected_corner_border"
            />

        <Button
            android:id="@+id/btn_send_material"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_inner_travel_reservation_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="发送材料至我的邮箱"/>

    </LinearLayout>

</RelativeLayout>
