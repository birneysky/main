<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/title_simple"/>

    <LinearLayout
        android:id="@+id/activity_edit_use_info_layout_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/activity_edit_use_info_tv_modify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="@string/user_info_nickname"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:maxLines="1"
            android:gravity="end"
            android:id="@+id/activity_edit_use_info_et_modify_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:maxLength="32"/>


    </LinearLayout>

</LinearLayout>
