<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hot_activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.InnerTravelCityActivity">

    <include layout="@layout/search_bar_simple_out" />

    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/white">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/activity_hot_activity_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

            </com.handmark.pulltorefresh.library.PullToRefreshListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorInnerTravelBottomBar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab1_hot_activity_list_sort_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="4dp"

                android:drawableTop="@mipmap/tab1_inner_travel_sort_default"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="8dp"
                android:text="@string/hotel_hotel_my_hotel_screen"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_tab1_hot_activity_list_trip_days"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/tab1_inner_travel_trip_days"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="8dp"
                android:text="@string/hotel_hotel_my_hotel_area"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_tab1_hot_activity_list_start_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/icon_inner_travel_start_time"

                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="8dp"
                android:text="@string/hotel_hotel_my_hotel_level"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_tab1_hot_activity_list_screen_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/tab1_inner_travel_sort_default"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="8dp"
                android:text="@string/tab1_inner_travel_sort_default"
                android:textColor="@android:color/white" />
        </LinearLayout>

    <!--</FrameLayout>-->


</LinearLayout>
