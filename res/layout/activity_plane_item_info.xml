<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jhhy.cuiweitourism.ui.PlaneItemInfoActivity"
    android:orientation="vertical">

    <!--顶部当前航班信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorActionBar"
        android:orientation="vertical"
        android:padding="16dp">
        <!--始发车站，时间，终点车站，时间，耗时-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/layout_plane_from_info"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_train_order_time_consuming"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_train_start_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京首都国际机场T3"
                    android:textColor="@android:color/white"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/tv_train_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="22:00"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_plane_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09-07 周三"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_train_order_time_consuming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@android:color/white"
                android:text="6时2分"
                android:gravity="center"
                android:drawableBottom="@mipmap/arrow_right_white"/>

            <LinearLayout
                android:id="@+id/layout_plane_arrival_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_train_order_time_consuming"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_train_end_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海虹桥机场T2"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_train_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="00：35"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_plane_arrival_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09-07 周三"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
        <!--车型，车号，日期，星期-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_train_order_train_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:text="南方航空CZ6132"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_train_order_train_name"
                android:layout_alignTop="@+id/tv_train_order_train_name"
                android:layout_toRightOf="@+id/tv_train_order_train_name"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv_train_order_train_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/tv_train_order_train_name"
                android:paddingLeft="8dp"
                android:text="空客A320（窄体）有餐饮"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
