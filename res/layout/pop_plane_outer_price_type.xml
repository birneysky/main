<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_plane_price_type_tax_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="20dp"
            android:text="@string/plane_flight_tax"
            android:textColor="@drawable/tab_1_text_selector"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2px"
            android:background="@color/colorLineGray2" />

        <RadioButton
            android:id="@+id/rb_plane_price_type_separate_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="16dp"
            android:text="@string/plane_flight_separate"
            android:textColor="@drawable/tab_1_text_selector"
            android:textSize="18sp" />

    </RadioGroup>


</LinearLayout>