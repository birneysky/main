<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <View
            android:id="@+id/view_hotel_left"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/iv_hotel_circle"
            android:background="@color/colorActionBar"
            android:layout_height="4dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_hotel_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle_small"
            />

        <ImageView
            android:id="@+id/iv_hotel_circle_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle_large"
            android:layout_centerInParent="true"
            />

        <View
            android:id="@+id/view_hotel_right"
            android:layout_toRightOf="@+id/iv_hotel_circle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/colorActionBar"
            android:layout_height="4dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hotel_price_range"
        android:paddingTop="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorActionBar"
        android:textSize="16sp"
        android:text="ï¿¥700"/>

</LinearLayout>
