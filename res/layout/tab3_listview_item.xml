<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layout_top_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/colorTab3ItemBgTop">

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBgTitleMain"
            android:text="待付款"/>


        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_clock_dark"
            android:text="2016-07-28"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:background="@android:color/white"
        >

        <ImageView
            android:id="@+id/iv_tab3_listview_item_destination"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:src="@mipmap/travel_icon"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_order_title"
            android:layout_toRightOf="@id/iv_tab3_listview_item_destination"
            android:layout_alignBottom="@id/iv_tab3_listview_item_destination"
            android:layout_alignTop="@id/iv_tab3_listview_item_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            />

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv_tab3_listview_item_destination"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <TextView
            android:id="@+id/tv_tab3_item_money"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="￥"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:gravity="bottom"
            android:paddingBottom="2dp"
            />

        <TextView
            android:id="@+id/tv_tab3_item_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="88888"
            android:gravity="bottom"
            android:textSize="18sp"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:layout_toRightOf="@+id/tv_tab3_item_money"
            />

        <Button
            android:id="@+id/btn_order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="@string/tab3_order_item_cancel_order"
            android:background="@drawable/bg_tab3_btn_border_cancel_order"
            android:layout_toLeftOf="@+id/btn_tab3_item_sign_contact"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            />
        <Button
            android:textSize="16sp"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:id="@+id/btn_tab3_item_sign_contact"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="@string/tab3_order_item_sign_contact"
            android:background="@drawable/bg_tab3_btn_border_sign_contact"
            android:layout_alignParentRight="true"
            />
        <Button
            android:visibility="visible"
            android:textSize="16sp"
            android:textColor="@color/colorTextBorder"
            android:id="@+id/btn_order_comment"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="@string/tab3_order_item_comment_order"
            android:background="@drawable/bg_tab3_btn_border_comment"
            android:layout_alignParentRight="true"
            />
        <Button
            android:visibility="visible"
            android:textSize="16sp"
            android:textColor="@color/colorBgTitleMain"
            android:id="@+id/btn_order_refund"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="@string/tab3_order_item_refund_order"
            android:background="@drawable/bg_tab3_btn_border_refund"
            android:layout_alignParentRight="true"
            />
        <Button
            android:visibility="visible"
            android:textSize="16sp"
            android:textColor="@color/colorBgTitleMain"
            android:id="@+id/btn_order_go_refund"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="@string/tab3_order_item_go_refund_order"
            android:background="@drawable/bg_tab3_btn_border_refund"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>



</LinearLayout>
