<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_price"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_train_ticket_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经济舱6.7折"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_plane_ticket_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/arrow_right_dark"
                android:paddingBottom="4dp"
                android:paddingTop="10dp"
                android:text="退改签说明"
                android:textColor="@color/colorGrayDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_plane_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥120"
                android:textColor="@color/colorTab1RecommendForYouMoney"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_tax_price"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="税费：￥477"
                android:paddingBottom="4dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorGrayDark"/>
        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_plane_ticket_reserve"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_btn_reserve_border_selector"
        android:text="@string/hotel_detail_reserve"
        android:textColor="@android:color/white" />
</LinearLayout>
