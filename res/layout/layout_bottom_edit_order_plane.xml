<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/tv_order_price_notice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="订单金额： ￥"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/tv_edit_order_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tv_order_price_notice"
        android:gravity="center"
        android:text="2879"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_edit_order_arrow_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_edit_order_price"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:src="@mipmap/icon_arrow_top_yellow" />

    <Button
        android:id="@+id/btn_edit_order_pay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_btn_edit_order_selector"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:text="立即支付"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
