<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.jhhy.cuiweitourism.ui.VisaItemDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <com.jhhy.cuiweitourism.view.MyScrollViewIS
            android:id="@+id/scrollview_visa_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_visa_nation"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2px"
                    android:background="@color/colorLineGray2" />

                <TextView
                    android:id="@+id/tv_visa_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp" />
                <!--价格-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/colorTab1RecommendForYouMoney"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_travel_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTab1RecommendForYouMoney"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/colorLineGray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="办理时长："
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_visa_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签证类型："
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_visa_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="停留时间："
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_visa_stay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效日期："
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_visa_effective_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="受理范围："
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_visa_apply_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EFF2F7" />

                <LinearLayout
                    android:id="@+id/layout_visa_item_main_indicator_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_visa_item_detail_indicator_bottom_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:paddingBottom="12dp"
                            android:paddingTop="16dp"
                            android:text="@string/visa_describe"
                            android:textColor="@color/colorTab1RecommendForYouArgument"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/view_visa_item_detail_indicator_bottom_product"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/colorTab1RecommendForYouArgument" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_visa_item_detail_indicator_bottom_material"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:paddingBottom="12dp"
                            android:paddingTop="16dp"
                            android:text="@string/visa_material"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/view_visa_item_detail_indicator_bottom_material"

                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/colorBgIndicator" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_visa_item_detail_indicator_bottom_notice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:paddingBottom="12dp"
                            android:paddingTop="16dp"
                            android:text="@string/visa_reserve_notice"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/view_visa_item_detail_indicator_bottom_notice"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/colorBgIndicator" />
                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:id="@+id/tv_visa_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:text="签证介绍"
                    android:padding="16dp"
                    android:textSize="16dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EFF2F7" />
                <TextView
                    android:id="@+id/tv_material"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@mipmap/arrow_right_dark"
                    android:text="所需材料"
                    android:padding="16dp"
                    android:textSize="16dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EFF2F7" />

                <LinearLayout
                    android:id="@+id/layout_reserve_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="预订须知"
                        />
                    <TextView
                        android:id="@+id/tv_reserve_notice"
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.jhhy.cuiweitourism.view.MyScrollViewIS>

        <LinearLayout
            android:id="@+id/layout_visa_item_main_indicator_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_visa_item_detail_indicator_top_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingTop="16dp"
                    android:text="@string/visa_describe"
                    android:textColor="@color/colorTab1RecommendForYouArgument"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_visa_item_detail_indicator_top_product"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorTab1RecommendForYouArgument" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_visa_item_detail_indicator_top_material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingTop="16dp"
                    android:text="@string/visa_material"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_visa_item_detail_indicator_top_material"

                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorBgIndicator" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_visa_item_detail_indicator_top_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingTop="16dp"
                    android:text="@string/visa_reserve_notice"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_visa_item_detail_indicator_top_notice"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorBgIndicator" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <include layout="@layout/visa_detail_bottom" />
</LinearLayout>
