<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jhhy.cuiweitourism.ui.PersonalizedCustomStartActivity">

    <include layout="@layout/title_tab1_inner_travel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/colorLineGray2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发城市"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableRight="@mipmap/arrow_right_dark"
                    android:gravity="right"
                    android:text="北京" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorLineGray2" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅游目的地"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableRight="@mipmap/arrow_right_dark"
                    android:gravity="right"
                    android:text="请选择目的地" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorLineGray2" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发时间"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableRight="@mipmap/arrow_right_dark"
                    android:gravity="right"
                    android:text="请选择出发日期" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorLineGray2" />

            <RelativeLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="天数"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/tv_price_calendar_day_number_reduce"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/tv_price_calendar_day_number"

                    android:background="@drawable/bg_iv_price_calendar_left_border"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_reduce" />

                <TextView
                    android:id="@+id/tv_price_calendar_day_number"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/tv_price_calendar_day_number_add"
                    android:background="@drawable/bg_tv_price_calendar_number_border"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/tv_price_calendar_day_number_add"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/tv_personalized_custom_start_time_unit"
                    android:background="@drawable/bg_iv_price_calendar_right_border"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_plus" />

                <TextView
                    android:id="@+id/tv_personalized_custom_start_time_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="天"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorLineGray2" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="人数"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/tv_price_calendar_number_reduce"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/tv_price_calendar_number"

                    android:background="@drawable/bg_iv_price_calendar_left_border"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_reduce" />

                <TextView
                    android:id="@+id/tv_price_calendar_number"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/tv_price_calendar_number_add"
                    android:background="@drawable/bg_tv_price_calendar_number_border"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/tv_price_calendar_number_add"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/tv_personalized_custom_start_adult_unit"
                    android:background="@drawable/bg_iv_price_calendar_right_border"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_plus" />

                <TextView
                    android:id="@+id/tv_personalized_custom_start_adult_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="成人"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <ImageView
                    android:id="@+id/tv_price_calendar_number_reduce_child"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/tv_price_calendar_number_child"

                    android:background="@drawable/bg_iv_price_calendar_left_border"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_reduce"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_price_calendar_number_child"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/tv_price_calendar_number_add_child"
                    android:background="@drawable/bg_tv_price_calendar_number_border"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="1"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/tv_price_calendar_number_add_child"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/tv_personalized_custom_start_child_unit"
                    android:background="@drawable/bg_iv_price_calendar_right_border"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_plus" />

                <TextView
                    android:id="@+id/tv_personalized_custom_start_child_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="儿童"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:background="@color/colorLineGray2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="价格预算"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_et_border_corner"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="5568" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="～" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_et_border_corner"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@android:color/white"
                        android:text="5568"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="元"
                    android:textSize="16sp"
                    android:paddingLeft="12dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:background="@color/colorLineGray2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="酒店类型"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />
                <TextView
                    android:background="@drawable/bg_et_border_corner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="奢华型"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <TextView
                    android:background="@drawable/bg_et_border_corner"
                    android:id="@+id/tv_personalized_custom_hotel_luxury"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="豪华型"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:background="@drawable/bg_et_border_corner"
                    android:id="@+id/tv_personalized_custom_hotel_comfortable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="舒适型"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:gravity="center_horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >
                <TextView
                    android:background="@drawable/bg_et_border_corner"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="经济型"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_et_border_corner"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="民宿型"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:background="@color/colorLineGray2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    />
                <EditText
                    android:layout_marginTop="16dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/et_personalized_custom_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_et_border_corner"
                    android:hint="请输入备注信息"
                    android:textSize="16sp"
                    android:gravity="top"
                    android:padding="4dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorLineGray3" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名：" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="必填，请输入您的姓名"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:background="@color/colorLineGray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机：" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="必填，请输入您的电话"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2px"
                android:background="@color/colorLineGray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱：" />

                <EditText

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="必填，请输入您的邮箱"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_regist_border_selector"
                android:text="提交定制"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
