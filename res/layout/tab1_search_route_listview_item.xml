<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:id="@+id/layout_tab1_search_route"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/iv_tab1_2_search_route_destination"
            android:layout_width="120dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/travel_icon" />
        <TextView
            android:id="@+id/tv_search_route_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟团游"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/colorTab1RecommendForYouArgument"
            android:textColor="@android:color/white"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_tab1_2_search_route_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_tab1_search_route"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="@android:color/black"
        android:text="@string/tab1_recommend_for_you_title"
        />

    <TextView
        android:id="@+id/tv_tab1_2_search_route_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_tab1_search_route"
        android:layout_alignBaseline="@+id/layout_tab1_search_route"

        android:layout_toRightOf="@+id/layout_tab1_search_route"
        android:gravity="bottom"
        android:text="￥"
        android:textColor="@color/colorTab1RecommendForYouMoney" />

    <TextView
        android:id="@+id/tv_tab1_2_search_route_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_tab1_search_route"

        android:layout_toRightOf="@+id/tv_tab1_2_search_route_money"
        android:gravity="bottom"
        android:text="15263"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:textSize="16sp" />


    <TextView
        android:layout_alignBottom="@+id/layout_tab1_search_route"
        android:id="@+id/layout_tab1_search_route_item_argument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/tab1_recommend_argument"
        android:text="@string/tab1_recommend_argument"
        android:textColor="@color/colorTab1RecommendForYouArgument"
        android:background="@drawable/bg_tab1_tv_border_argument"
        android:drawablePadding="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"

        />

</RelativeLayout>
