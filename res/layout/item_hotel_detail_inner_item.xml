<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_item_hotel_list"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/travel_icon" />
    <!--android:layout_alignTop="@+id/layout_item_right"-->
    <!--android:layout_alignBottom="@+id/layout_item_right"-->
    <LinearLayout
        android:id="@+id/layout_item_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_hotel_list"
        android:layout_alignTop="@+id/iv_item_hotel_list"
        android:layout_toLeftOf="@+id/tv_hotel_detail_price"
        android:layout_toRightOf="@+id/iv_item_hotel_list"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hotel_room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="豪华客房"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_hotel_bed_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:gravity="bottom"
            android:textColor="@color/colorGrayDark"
            android:textSize="13sp" />
    </LinearLayout>
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="￥"-->
    <!--android:layout_alignBaseline="@+id/tv_hotel_detail_price"-->
    <!--android:textColor="@color/colorTab1RecommendForYouMoney"-->
    <!--android:layout_toLeftOf="@+id/tv_hotel_detail_price"-->
    <!--/>-->
    <TextView
        android:id="@+id/tv_hotel_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_hotel_detail_reserve"
        android:paddingRight="8dp"
        android:text="￥298"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_hotel_detail_reserve"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_reserve_border_selector"
        android:minWidth="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/hotel_detail_reserve"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</RelativeLayout>
