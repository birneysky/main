<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >
    <ImageView
        android:id="@+id/iv_item_hotel_list"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@mipmap/travel_icon"
        android:scaleType="centerCrop"

        />
    <!--android:layout_alignTop="@+id/layout_item_right"-->
    <!--android:layout_alignBottom="@+id/layout_item_right"-->
    <RelativeLayout
        android:id="@+id/layout_item_right"
        android:layout_toRightOf="@+id/iv_item_hotel_list"
        android:layout_toLeftOf="@+id/tv_hotel_detail_price"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_hotel_list"
        android:layout_alignBottom="@+id/iv_item_hotel_list"
        >
        <TextView
            android:id="@+id/tv_hotel_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="豪华客房"/>
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_hotel_bed_type"
            android:text="含 单早双床"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="￥"-->
        <!--android:layout_alignBaseline="@+id/tv_hotel_detail_price"-->
        <!--android:textColor="@color/colorTab1RecommendForYouMoney"-->
        <!--android:layout_toLeftOf="@+id/tv_hotel_detail_price"-->
        <!--/>-->
    <TextView
        android:id="@+id/tv_hotel_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥298"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:layout_toLeftOf="@+id/btn_hotel_detail_reserve"
        android:paddingRight="10dp"
        />

    <Button
        android:id="@+id/btn_hotel_detail_reserve"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/hotel_detail_reserve"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_btn_regist_border_selector"
        />
</RelativeLayout>
