<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/layout_arrival"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/tv_ticket_item_train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G15"/>
        <TextView
            android:id="@+id/tv_ticket_item_train_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18：00"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            />
        <TextView
            android:id="@+id/tv_ticket_item_train_start_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京南"
            android:drawableLeft="@mipmap/icon_train_light"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_ticket_item_train_consuming_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04小时55分"/>
        <TextView
            android:id="@+id/tv_ticket_item_train_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15：55"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            />
        <TextView
            android:id="@+id/tv_ticket_item_train_arrival_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海虹桥"
            android:drawableLeft="@mipmap/icon_train_light"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_toRightOf="@+id/layout_arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_ticket_item_train_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1210"
            android:textSize="18sp"
            android:textColor="@color/colorTab1RecommendForYouMoney"/>
        <TextView
            android:id="@+id/tv_ticket_item_train_seat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商务座"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:id="@+id/tv_ticket_item_train_ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14张"
            />
    </LinearLayout>

</RelativeLayout>
