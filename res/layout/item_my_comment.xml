<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jhhy.cuiweitourism.view.CircleImageView
            android:id="@+id/civ_item_my_comment_user_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/travel_icon" />

        <TextView
            android:id="@+id/tv_item_my_comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/civ_item_my_comment_user_portrait"
            android:layout_toRightOf="@+id/civ_item_my_comment_user_portrait"
            android:text="name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/civ_item_my_comment_user_portrait"
            android:layout_below="@+id/tv_item_my_comment_user_name"
            android:layout_toRightOf="@+id/civ_item_my_comment_user_portrait"
            android:gravity="bottom"
            android:text="2016-08-19" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_content_be_comment"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/travel_icon" />

        <TextView
            android:id="@+id/tv_content_be_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBgTextViewMyComment"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.4"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:text="@string/tab1_recommend_for_you_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLineGray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我："
            android:textColor="@color/colorTextColorMyComment" />

        <TextView
            android:id="@+id/tv_my_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="@string/tab1_recommend_for_you_title" />
    </LinearLayout>
</LinearLayout>
