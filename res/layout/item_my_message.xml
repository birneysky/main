<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_message_add_time"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_content_icon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/travel_icon" />

        <TextView
            android:id="@+id/tv_content_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBgTextViewMyComment"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.4"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:text="@string/tab1_recommend_for_you_title" />
    </LinearLayout>

    <View
        android:id="@+id/item_comment_line"
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:layout_marginBottom="10dp"
        android:background="@color/colorLineGray2" />


</LinearLayout>
