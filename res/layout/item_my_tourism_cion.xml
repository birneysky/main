<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/tv_item_my_tourism_coin"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买去三亚的路线"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/tv_item_my_tourim_time"
        android:layout_below="@+id/tv_item_my_tourism_coin"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-08-20"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/tv_item_my_tourism_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBgTitleMain"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
