<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPlanePop"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_plane_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南方航空CZ6132 (经济舱)"
        android:textColor="@color/colorPlaneInfo"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成人票"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="机建+燃油"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="保险"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="乘机人数"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/tv_plane_price_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥830.00"
                android:textColor="@color/colorPlanePrice" />

            <TextView
                android:id="@+id/tv_plane_price_additional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="￥50"
                android:textColor="@color/colorPlanePrice" />

            <TextView
                android:id="@+id/tv_plane_price_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="￥0"
                android:textColor="@color/colorPlanePrice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="@color/colorPlanePrice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/tv_plane_number_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 0人"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_plane_number_additional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="x 0人"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_plane_number_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="x 0份"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_plane_number_passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="x 0"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
