<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jhhy.cuiweitourism.ui.VisaNeedMaterialActivity"
    android:id="@+id/layout_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/title_tab1_inner_travel"/>-->

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/colorActionBar"
        app:tabTextColor="@android:color/black"
        app:tabBackground="@android:color/white"
        app:tabSelectedTextColor="@color/colorActionBar"
        app:tabTextAppearance="@style/textsizeappearance"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/visa_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <include layout="@layout/visa_detail_bottom"/>

</LinearLayout>
