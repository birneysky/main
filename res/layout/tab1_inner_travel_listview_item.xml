<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:id="@+id/layout_tab1_2_inner_travel"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/iv_tab1_2_inner_travel"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/travel_icon" />

        <TextView
            android:id="@+id/tv_tab1_2_inner_travel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTab1RecommendForYouArgument"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:textColor="@android:color/white" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_tab1_2_inner_travle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_tab1_2_inner_travel"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_tab1_2_inner_travle_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_tab1_2_inner_travle_prirce"
        android:layout_toRightOf="@+id/layout_tab1_2_inner_travel"
        android:gravity="bottom"
        android:text="￥"
        android:textColor="@color/colorTab1RecommendForYouMoney" />

    <TextView
        android:id="@+id/tv_tab1_2_inner_travle_prirce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_tab1_2_inner_travel"
        android:layout_toRightOf="@+id/tv_tab1_2_inner_travle_money"
        android:gravity="bottom"
        android:text="0"
        android:textColor="@color/colorTab1RecommendForYouMoney"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_tab1_2_inner_travle_prirce"
        android:layout_toRightOf="@+id/tv_tab1_2_inner_travle_prirce"
        android:gravity="bottom"
        android:text="起"
        android:paddingLeft="2dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_inner_travel_item_argument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_tab1_2_inner_travel"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_tab1_tv_border_argument"
        android:drawableLeft="@mipmap/tab1_recommend_argument"
        android:drawablePadding="4dp"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="@string/tab1_recommend_argument"
        android:textColor="@color/colorTab1RecommendForYouArgument" />

</RelativeLayout>
